pipeline {
    agent any

    environment {
        IMAGE_NAME = "flask-scanner"
    }

    stages {
        stage('Clone Repository') {
            steps {
                git 'https://github.com/yourusername/web-vuln-scanner.git'
            }
        }

        stage('Build Docker Image') {
            steps {
                script {
                    docker.build(IMAGE_NAME)
                }
            }
        }

        stage('Run Container') {
            steps {
                script {
                    docker.image(IMAGE_NAME).run('-p 5000:5000')
                }
            }
        }
    }
}
